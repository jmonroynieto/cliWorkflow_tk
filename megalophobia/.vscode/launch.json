    "version": "0.2.0",
    "configurations": [
        {
            "name": "demo",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": ["-d", "demo", ">", "/dev/null"],
        },
        {
            "name": "colored",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "DEBUG_MODE": "true"
            },
            "args": [
                "-d"
            ],
        }
    ]
}